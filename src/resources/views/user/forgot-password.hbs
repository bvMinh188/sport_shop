<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <img src="https://t4.ftcdn.net/jpg/09/82/07/11/360_F_982071173_oTETgokPvxjDQysPY3QEppuA0TYoYjk6.jpg" 
                             alt="Reset Password" 
                             class="img-fluid mb-4" 
                             style="max-width: 150px;">
                        <h3 style="color: #2196F3;">Phục hồi mật khẩu</h3>
                    </div>
                    <form id="forgotPasswordForm">
                        <div class="form-group mb-4">
                            <div class="input-group">
                                <span class="input-group-text bg-white">
                                    <i class="fas fa-envelope text-muted"></i>
                                </span>
                                <input type="email" 
                                       class="form-control border-start-0" 
                                       id="email" 
                                       name="email" 
                                       placeholder="Email"
                                       required>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-danger w-100 mb-3" style="background-color: #f44336;">Gửi</button>
                        <button type="button" class="btn btn-light w-100" onclick="window.location.href='/login'">Hủy</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.card {
    border: none;
    border-radius: 8px;
}

.form-control {
    height: 45px;
    border-radius: 4px;
}

.input-group-text {
    border-right: 0;
}

.form-control:focus {
    box-shadow: none;
    border-color: #ced4da;
}

.btn {
    height: 45px;
    font-weight: 500;
    border-radius: 4px;
}

.btn-danger {
    background-color: #f44336;
    border: none;
}

.btn-danger:hover {
    background-color: #d32f2f;
}

.btn-light {
    background-color: #f5f5f5;
    border: 1px solid #ddd;
    color: #666;
}

.btn-light:hover {
    background-color: #e0e0e0;
}

.img-fluid {
    border-radius: 10px;
}
</style>

<div class="message-container"></div>

<script>
$(document).ready(function() {
    $('#forgotPasswordForm').submit(function(e) {
        e.preventDefault();
        const email = $('#email').val();
        const submitBtn = $(this).find('button[type="submit"]');
        const originalText = submitBtn.text();

        submitBtn.prop('disabled', true)
            .html('<i class="fas fa-spinner fa-spin"></i> Đang xử lý...');

        $.ajax({
            url: '/forgot-password',
            method: 'POST',
            data: { email },
            success: function(response) {
                if (response.success) {
                    showMessage('Link đặt lại mật khẩu đã được gửi vào email của bạn', 'success');
                    setTimeout(() => {
                        window.location.href = '/login';
                    }, 3000);
                } else {
                    showMessage(response.message || 'Có lỗi xảy ra', 'error');
                    submitBtn.prop('disabled', false).text(originalText);
                }
            },
            error: function(xhr) {
                showMessage(xhr.responseJSON?.message || 'Có lỗi xảy ra', 'error');
                submitBtn.prop('disabled', false).text(originalText);
            }
        });
    });

    function showMessage(message, type = 'success') {
        const icon = type === 'success' ? 'check-circle' : 'exclamation-circle';
        const messageElement = $(`
            <div class="message ${type}">
                <i class="fas fa-${icon}"></i>
                ${message}
            </div>
        `);
        
        $('.message-container').append(messageElement);
        
        setTimeout(() => {
            messageElement.addClass('hiding');
            setTimeout(() => {
                messageElement.remove();
            }, 300);
        }, 2000);
    }
});
</script> 