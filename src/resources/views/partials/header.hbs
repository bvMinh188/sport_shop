<!-- Header -->
<header>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container">
            {{#if (eq user.role "admin")}}
                <a class="navbar-brand ml-auto" href="/admin">
                    <img src="https://shared.fastly.steamstatic.com/store_item_assets/steam/apps/1067900/header.jpg?t=1706149846" alt="Admin Dashboard">
                </a>
            {{else}}
                <a class="navbar-brand ml-auto" href="/">
                    <img src="https://shared.fastly.steamstatic.com/store_item_assets/steam/apps/1067900/header.jpg?t=1706149846" alt="Sport Shop Logo">
                </a>
            {{/if}}

            <!-- Search Form -->
            <form class="d-flex search-form mx-auto" action="/search" method="GET">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Tìm kiếm sản phẩm..." name="q" id="searchInput" value="{{searchQuery}}" required>
                    <button class="btn btn-outline-light search-button" type="submit">
                        <img class="search-icon" src="https://www.shutterstock.com/image-vector/search-find-lupa-icon-logo-260nw-1456108235.jpg" alt="Search">
                    </button>
                </div>
            </form>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    {{#if user}}
                        {{#if (eq user.role "admin")}}
                            <!-- Admin Navigation -->
                            <li class="nav-item">
                                <a href="/admin/products" class="btn custom-btn">Quản lý sản phẩm</a>
                            </li>
                            <li class="nav-item">
                                <a href="/admin/orders" class="btn custom-btn">Quản lý đơn hàng</a>
                            </li>
                            <li class="nav-item">
                                <a href="/admin/users" class="btn custom-btn">Quản lý người dùng</a>
                            </li>
                        {{else}}
                            <!-- User Navigation -->
                            <li class="nav-item">
                                <a href="/user/profile" class="btn custom-btn">
                                    <img class="account-icon" src="https://png.pngtree.com/png-vector/20191009/ourmid/pngtree-user-icon-png-image_1796659.jpg" alt="thông tin cá nhân">
                                    <span>Tài khoản</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/order" class="btn custom-btn">
                                    <img class="order-icon" src="https://cdn.pixabay.com/photo/2014/04/02/10/53/shopping-cart-304843_640.png" alt="Giỏ hàng">
                                    <span>Giỏ hàng</span>
                                </a>
                            </li>
                        {{/if}}
                        <li class="nav-item">
                            <button class="btn custom-btn" id="logout-btn">
                                <span>Đăng xuất</span>
                            </button>
                        </li>
                    {{else}}
                        <!-- Guest Navigation -->
                        <li class="nav-item">
                            <a href="/auth/login" class="btn custom-btn">
                                <img class="login-icon" src="https://e7.pngegg.com/pngimages/713/762/png-clipart-computer-icons-button-login-image-file-formats-logo-thumbnail.png" alt="Đăng nhập">
                                <span>Đăng nhập</span>
                            </a>
                        </li>
                    {{/if}}
                </ul>
            </div>
        </div>
    </nav>
</header>

<!-- Bootstrap JS, Popper.js, and jQuery -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
document.addEventListener("DOMContentLoaded", function () {
    const logoutBtn = document.getElementById("logout-btn");

    // Handle logout
    if (logoutBtn) {
        logoutBtn.addEventListener("click", function () {
            fetch("/logout", { method: "POST" })
                .then(() => {
                    window.location.href = "/auth/login";
                })
                .catch(error => console.error("Lỗi đăng xuất:", error));
        });
    }
});
</script>