<div class="sidebar-content h-100">
    <ul class="nav flex-column h-100 py-2">
        <li class="nav-item">
            <a class="nav-link {{#if isHome}}active{{/if}} text-white" href="/admin/home">
                <i class="fas fa-home"></i>
                Trang chủ
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link {{#if isCategory}}active{{/if}} text-white" href="/admin/category">
                <i class="fas fa-list"></i>
                Danh mục
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link {{#if isProduct}}active{{/if}} text-white" href="/admin/product">
                <i class="fas fa-box"></i>
                Sản phẩm
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link {{#if isOrder}}active{{/if}} text-white" href="/admin/transaction">
                <i class="fas fa-shopping-cart"></i>
                Đơn hàng
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link {{#if isUser}}active{{/if}} text-white" href="/admin/users">
                <i class="fas fa-users"></i>
                Người dùng
            </a>
        </li>
        <li class="nav-item mt-auto border-top">
            <a class="nav-link text-white" href="/auth/login" id="admin-logout-btn">
                <i class="fas fa-sign-out-alt"></i>
                Đăng xuất
            </a>
        </li>
    </ul>
</div>

<style>
.sidebar-content {
    height: 100vh;
    display: flex;
    flex-direction: column;
    background-color: #343a40;
}

.nav {
    display: flex;
    flex-direction: column;
}

.nav-item {
    width: 100%;
}

.nav-link {
    padding: 1rem;
    color: rgba(255, 255, 255, .8);
    font-size: 1rem;
    font-weight: 500;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    cursor: pointer;
}

.nav-link:hover {
    color: #fff;
    background: rgba(255, 255, 255, 0.1);
}

.nav-link.active {
    color: #fff;
    background: rgba(255, 255, 255, 0.1);
}

.nav-link i {
    margin-right: 10px;
    width: 20px;
    text-align: center;
    font-size: 1.1rem;
}

.border-top {
    border-top: 1px solid rgba(255, 255, 255, .1) !important;
}

/* Đảm bảo nút logout luôn ở dưới cùng */
.mt-auto {
    margin-top: auto !important;
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function () {
    const adminLogoutBtn = document.getElementById("admin-logout-btn");

    if (adminLogoutBtn) {
        adminLogoutBtn.addEventListener("click", function (e) {
            e.preventDefault();
            fetch("/logout", { method: "POST" })
                .then(() => {
                    window.location.href = "/auth/login";
                })
                .catch(error => console.error("Lỗi đăng xuất:", error));
        });
    }
});
</script> 